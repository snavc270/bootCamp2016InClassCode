//Declare some variables

//declare an integer x, and assign it a value of 10
int x = 10; 
//int x = 11;

//declare a boolean which returns TRUE when x equals to 10
boolean isEqualTen = (x==10); 


if(isEqualTen){ //check if the boolean carries a value of TRUE

  // print "Yes, x is ten" in console when the boolean is TRUE
  println("Yes, x is ten"); 
  
} else { //skip to this step if the boolean equals to FALSE

  //print "No, x is not ten" in console when the boolean is TRUE
  println("No, x is not ten");
  
}